{
  "name": "project-3-main",
  "version": "1.0.0",
  "description": "Recipe Generator App - MERN Stack Project",
  "scripts": {
    "start": "cd server && npm run start",
    "seed": "cd server && npm run seed",
    "develop": "concurrently \"cd server && npm run watch\" \"cd client && npm run dev\"",
    "install": "cd server && npm i && cd ../client && npm i",
    "build": "cd client && npm run build",
    "render-build": "npm install && npm run build",
    "test": "npx cypress run --browser electron",
    "test-component": "npx cypress run --component",
    "test-gui": "npx cypress open"
  },
  "keywords": [
    "recipe",
    "mern",
    "react",
    "mongodb",
    "node"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cypress": "^13.13.0",
    "cypress-ctrf-json-reporter": "^0.0.11",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "github-actions-ctrf": "^0.0.47"
  }
}
